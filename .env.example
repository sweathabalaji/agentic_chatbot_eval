# =============================================================================
# Mutual Funds Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
GROQ_API_KEY=your_groq_api_key_here
# Get your API key from: https://console.groq.com/keys

# -----------------------------------------------------------------------------
# Database Configuration (Evaluation Pipeline)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mf_agent_eval
DB_USER=mf_agent
DB_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
# Confidence threshold for intent classification (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.75

# Agent version for tracking
AGENT_VERSION=1.0.0

# Environment: development, staging, production
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# DeepEval Configuration (Optional)
# -----------------------------------------------------------------------------
# DeepEval API key (optional, for cloud features)
# DEEPEVAL_API_KEY=your_deepeval_key

# Enable/disable specific metrics
ENABLE_DEEPEVAL=true
ENABLE_HALLUCINATION_CHECK=true
ENABLE_FAITHFULNESS_CHECK=true
ENABLE_RELEVANCE_CHECK=true

# -----------------------------------------------------------------------------
# Safety & Compliance
# -----------------------------------------------------------------------------
# Enable disclaimer requirement check
REQUIRE_DISCLAIMER=true

# Enable PII detection
ENABLE_PII_DETECTION=true

# Enable risk keyword detection
ENABLE_RISK_DETECTION=true

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
# Maximum latency threshold (milliseconds)
MAX_LATENCY_MS=5000

# Connection pool settings
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=20

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=logs/agent.log
ENABLE_CONSOLE_LOGGING=true

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000
VITE_ENABLE_VOICE_INPUT=true

# -----------------------------------------------------------------------------
# Test & Evaluation
# -----------------------------------------------------------------------------
# Auto-run evaluations on every request
AUTO_EVALUATE=true

# Save failed test cases for review
SAVE_FAILED_TESTS=true

# Test suite run frequency (for automated testing)
TEST_SUITE_INTERVAL_HOURS=24
